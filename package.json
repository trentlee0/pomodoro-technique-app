{
  "name": "tomato",
  "version": "0.1.0",
  "description": "番茄时钟",
  "main": "main.js",
  "author": "Trent0",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "package": "electron-packager . 番茄时钟 --win --out ./out --arch=x64 --overwrite --icon=./img/icon.ico",
    "rebuildnew": "npm rebuild --runtime=electron --target=11.0.5 --disturl=https://atom.io/download/atom-shell --abi=85"
  },
  "build": {
    "appId": "com.trent.tomato",
    "asar": true,
    "directories": {
      "buildResources": "./",
      "output": "dist"
    },
    "win": {
      "icon": "img/icon.ico",
      "asarUnpack": [
        "./css/theme",
        "README.md"
      ],
      "target": [
        "nsis",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "img/icon.ico",
      "uninstallerIcon": "img/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Tomato"
    }
  },
  "iohook": {
    "targets": [
      "node-83",
      "electron-85"
    ],
    "platforms": [
      "win32"
    ],
    "arches": [
      "x64",
      "ia32"
    ]
  },
  "postinstall": "electron-builder install-app-deps",
  "devDependencies": {
    "electron": "^11.0.5",
    "electron-builder": "^22.10.5",
    "electron-packager": "^15.2.0",
    "node-abi": "^2.21.0"
  },
  "dependencies": {
    "iohook": "^0.7.2",
    "jquery": "^3.6.0",
    "lowdb": "^1.0.0",
    "timer.js": "^1.0.4"
  }
}
